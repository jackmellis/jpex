{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "types": ["node", "jest"]
  },
  "include": ["src", "@types"]
}
